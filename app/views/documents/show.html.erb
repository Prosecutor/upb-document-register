<h1>Document</h1>

<h3>Title</h3>
<p>
  <%= @document.title %>
</p>

<h3>Description</h3>
<p>
  <%= @document.description %>
</p>

<h3>Attached files</h3>
<p>
  <table>
    <% @document.files.each do |file| %>
      <tr>
        <td>
          <%= link_to file.filename.to_s, rails_blob_path(file, disposition: "attachment") %>
        </td>
      </tr>
    <% end %>
  </table>
</p>

<h3>Actions</h3>
<p>
  <%= render 'actions', document: @document %>
</p>